@model IEnumerable<Books>
@{
    <div class= "container pt-3">
    <div class='row'>
        <div class='col-6 tp-6'>
            <h2 class="titleBrowse">
                Your Library
            </h2>
        </div>
    </div>

    @if(Model.Count() > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                  <th scope="col">Title</th>
                  <th scope="col">Category</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td>
                            @obj.Title
                        </td>
                        <td>
                            @obj.Category
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
       <p>
           No Category exists.
       </p>
    }
     
</div>
    <a asp-controller="AddBook" asp-action="Index" class="w-100 btn btn-lg btnbody mt-3 ">Add new book</a>
}
