<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibraryMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibraryMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
         <nav class="navbar navbar-expand-md navbar-dark fixed-top navcolor">
        <div class="container-fluid">
          <a class="title" asp-controller="Home" asp-action="Index">Dream Library</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarCollapse"
            aria-controls="navbarCollapse"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mx-3 me-auto mb-2 mb-md-0 navlist">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
              </li>
              <li class="nav-item">
                @if(User.Identity.IsAuthenticated){
                    <a btn.Enabled = true; class="nav-link active" aria-current="page" asp-controller="BrowseBooks" asp-action="Index">Browse Library</a>

                }

              </li>
              <li class="nav-item">

                @if(User.Identity.IsAuthenticated){
      
                    <a btn.Enabled = true; class="nav-link active" aria-current="page" asp-controller="AddBook" asp-action="Index"
                  >Add new Book</a>
                }

              </li>
            </ul>

            <form class="d-flex">
                    @if (User.Identity.IsAuthenticated)
                        {

                            <button asp-controller="Account" asp-action="Logout" class="btn login btnnav mx-1" type="submit">Log out</button>

                        }
                        else
                        {

                            <button asp-controller="Account" asp-action="Login" class="btn login btnnav mx-1" type="submit">Log in</button>
 
                        }  
                    @if (!User.Identity.IsAuthenticated)
                        {

                            <button asp-controller="Account" asp-action="Register" class="btn login btnnav mx-1" type="submit">Register</button>

                        }
                        
              
            </form>
          </div>
        </div>
      </nav>

    </header>
    <div class="container mt-5 ">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - LibraryMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
